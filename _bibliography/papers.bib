	author = {Zhou, Anthony and Wikner, Alexander and Lancelin, Amaury and Hassanzadeh, Pedram and Farimani, Amir Barati},
	month = sep,
	year = {2025},
	note = {arXiv:2509.26282 [cs]},
	keywords = {Computer Science - Machine Learning},
	file = {Preprint PDF:/Users/marchakitus/Zotero/storage/EAMFCRMI/Zhou et al. - 2025 - Reframing Generative Models for Physical Systems using Stochastic Interpolants.pdf:application/pdf;Snapshot:/Users/marchakitus/Zotero/storage/6RVFXNB9/2509.html:text/html},
