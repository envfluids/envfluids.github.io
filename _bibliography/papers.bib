@article{pahlavan_importance_2025,
	title = {On the {Importance} of {Learning} {Non}‐{Local} {Dynamics} for {Stable} {Data}‐{Driven} {Climate} {Modeling}: {A} {1D} {Gravity} {Wave}‐{QBO} {Testbed}},
