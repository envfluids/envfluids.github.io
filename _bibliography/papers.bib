	doi = {10.48550/arXiv.2505.10241},
	abstract = {Artificial intelligence (AI) models have transformed weather forecasting, but their skill for gray swan extreme events is unclear. Here, we analyze GraphCast and FuXi forecasts of the unprecedented 2024 Dubai storm, which had twice the training set's highest rainfall in that region. Remarkably, GraphCast accurately forecasts this event 8 days ahead. FuXi forecasts the event, but underestimates the rainfall, especially at long lead times. GraphCast's success stems from "translocation": learning from comparable/stronger dynamically similar events in other regions during training via global effective receptive fields. Evidence of "extrapolation" (learning from training set's weaker events) is not found. Even events within the global distribution's tail are poorly forecasted, which is not just due to data imbalance (generalization error) but also spectral bias (optimization error). These findings demonstrate the potential of AI models to forecast regional gray swans and opportunity to improve them through understanding the mechanisms behind their successes and limitations.},
	urldate = {2025-10-07},
	publisher = {arXiv},
	author = {Sun, Y. Qiang and Hassanzadeh, Pedram and Shaw, Tiffany and Pahlavan, Hamid A.},
	month = may,
	year = {2025},
	note = {arXiv:2505.10241 [physics]},
	keywords = {Physics - Atmospheric and Oceanic Physics},
	file = {Preprint PDF:/Users/marchakitus/Zotero/storage/E5IPXCGE/Sun et al. - 2025 - Predicting Beyond Training Data via Extrapolation versus Translocation AI Weather Models and Dubai'.pdf:application/pdf;Snapshot:/Users/marchakitus/Zotero/storage/GXYP7D3Q/2505.html:text/html},
}

@misc{darman_fourier_2025,
