@article{chattopadhyay_datadriven_2020,
	title = {Data‐{Driven} {Super}‐{Parameterization} {Using} {Deep} {Learning}: {Experimentation} {With} {Multiscale} {Lorenz} 96 {Systems} and {Transfer} {Learning}},
